{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "mode": "dock",
    "fixed-center": true,
    "exclusive": true,
    // "passthrough": false,
    "gtk-layer-shell": true,
    // "ipc": true,
    "spacing": 0,
    "height": 0,
    "margin-left": 5,
    "margin-right": 5,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        "hyprland/submap"
    ],
    "modules-center": [
        "clock",
        "custom/weather",
        "network",
        "group/mpris",
        "hyprland/language",
        "keyboard-state",
        "custom/updates",
        "tray"
    ],
    "modules-right": [
        "memory",
        "custom/temperature",
        "cpu",
        "custom/drives",
        "battery",
        "backlight",
        "bluetooth",
        "wireplumber#sink",
        "wireplumber#source",
        "group/group-power"
    ],
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true,
            "click-to-reveal": false
        },
        "modules": [
            "custom/expand-icon",
            "custom/lock",
            "custom/reboot",
            "custom/power"
        ]
    },
    "custom/expand-icon": {
        "format": "ÔÉâ",
        "tooltip": false
    },
    "custom/lock": {
        "format": "Û∞çÅ",
        "tooltip": false,
        "on-click": "hyprlock"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "tooltip": false,
        "on-click": "reboot"
    },
    "custom/power": {
        "format": "ÔÄë",
        "tooltip": false,
        "on-click": "shutdown now"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "scrolllock": true,
        "format": {
            "numlock": "N{icon}",
            "capslock": "C{icon}",
            "scrolllock": "S{icon}"
        },
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": ""
        }
    },
    "hyprland/submap": {
        "format": "{}",
        "tooltip": false
    },
    "custom/temperature": {
        "tooltip" : true,
        "format" : "{}",
        "interval" : 1,
        "restart-interval": 1,
        "exec" : "~/.config/waybar/scripts/waybar-temp.sh",
        "return-type" : "json"
    },
    "hyprland/language": {
        "format": "ÔÑú {short}",
        "keyboard-name": "at-translated-set-2-keyboard",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },
    "memory": {
        "interval": 2,
        "format": "{used:0.1f}G/{total:0.1f}G",
        "tooltip-format": "Used: {used:0.1f}G {percentage}%\nAvailable: {avail:0.1f}G\nTotal: {total:0.1f}G\nSWAP Used: {swapUsed:0.1f}G {swapPercentage}%\nSWAP Available: {swapAvail:0.1f}G\nSWAP Total: {swapTotal:0.1f}G"
    },
    "group/mpris": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true,
            "click-to-reveal": false
        },
        "modules": [
            "mpris#colapsed",
            "mpris#expanded"
        ]
    },
    "mpris#colapsed": {
        "interval": 1,
        "tooltip": false,
        "format": "{player_icon}",
        "format-paused": "{player_icon} ({status_icon})",
        "format-stopped": "{player_icon}:{status_icon}",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ",
            "spotify": "<span font='10' rise='0pt'>ÔÜº</span>"
        },
        "status-icons": {
            "paused": "‚è∏",
            "playing": "‚ñ∂",
            "stopped": "stopped"
        },
        "player": "spotify", // Default Player
        
        "ignored-players": 
            ["firefox", "chromium", "plasma-browser-integration", "edge", "vlc"]
    },
    "mpris#expanded": {
        "interval": 1,
        "title-len": 30,
        "format": "{title}",
        "format-paused": "<i>{title}</i>",
        "format-stopped": ":{status_icon}",
        "tooltip-format": "{player} ({status}) {title} {artist} {album} {length} {position}",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ",
            "spotify": "<span font='10' rise='0pt'>ÔÜº</span>"
        },
        "status-icons": {
            "paused": "‚è∏",
            "playing": "‚ñ∂",
            "stopped": "stopped"
        },
        "player": "spotify", // Default Player
        "ignored-players": 
            ["firefox", "chromium", "plasma-browser-integration", "edge", "vlc"]
    },
    "cpu": {
        "interval": 1,
        "format": "{max_frequency:>}GHz | {usage}%",
        "on-click": "kitty -e htop --sort-key PERCENT_CPU",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },
    "network": {
        "interval": 1,
        // "interface": "wlp2s0", // (Optional) To force the use of this interface
        "on-click": "nm-connection-editor",
        "on-click-right": "killall nm-connection-editor",
        "format": "{ifname} {bandwidthUpBytes}Up {bandwidthDownBytes}Down",
        "format-wifi": "{essid} <span font='10' rise='1pt'>Ôá´</span>  ({signalStrength}%)",
        "format-ethernet": "<span font='10' rise='1pt'>ÔÉÆ</span>  {bandwidthUpBytes:1}  <span font='10' rise='1pt'>ÔÉ≠</span>  {bandwidthDownBytes:1}",
        "format-disconnected": "Disconnected ‚ö†",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-wifi": "{essid} <span font='10' rise='1pt'>Ôá´</span>\n\nSignal:\t({signalStrength}%){signaldBm}dBm\nFrequency:\t{frequency}MHz\nInterface:\t{ifname}\nIP:\t{ipaddr}/{cidr}\nMask:\t{netmask}\nGateway:\t{gwaddr}\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-ethernet": "Interface:\t{ifname}\nIP:\t{ipaddr}/{cidr}\nMask:\t{netmask}\nGateway:\t{gwaddr}\n\n{bandwidthUpBytes}\tUp\n{bandwidthDownBytes}\tDown",
        "tooltip-format-disconnected": "Disconnected ‚ö†",
        "max-length": 25,
    },
    "hyprland/window": {
        "format": "{}",
        "icon": true,
        "icon-size": 16,
        "separate-outputs": true
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "on-click": "activate",
        "format": "{name}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        },
        "sort-by-number": true,
        "active-only": false
    },
    "custom/updates": {
        "exec": "(pacman -Qu ; trizen -Qua) | wc -l",
        "interval": 7200,
        "tooltip": false,
        "format": "Ôã± {}"
    },
    "custom/weather" : {
        "tooltip" : true,
        "format" : "{}",
        "interval" : 600,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },
    "custom/drives" : {
        "tooltip" : true,
        "format" : "{}",
        "interval" : 1,
        "exec" : "~/.config/waybar/scripts/waybar-drives.sh",
        "return-type" : "json",
        "escape": false
    },
    "tray": {
        "icon-size": 13,
        "spacing": 10
    },
    "clock": {
        "interval" : 1,
        "format": "{:%A <span font='10' rise='1pt'>Û∞•î</span> %H:%M:%OS <span font='10' rise='1pt'>ÔÅ≥</span> %d/%m/%y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "on-click-middle": "gnome-calendar",
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Ôä®", "ÔÜÖ"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "tooltip": true,
        "tooltip-format": "Capacity: {capacity}\nPower: {power}\nTime To: {timeTo}\nTime: {time}\nCycles: {cycles}\nHealth: {health}"
    },
    "wireplumber#sink": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôä§",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-middle": "pavucontrol -t 3",
        "on-click-right": "killall pavucontrol",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
        "format-icons": {
            "headphones": "Ôñè",
            "default": ["Ôä§", "Ôä¢", "Ôñè"]
        },
        "scroll-step": 5,
        "states": { "p0":0, "p5":5, "p10":10, "p15":15, "p20":20, "p25":25, "p30":30, "p35":35, "p40":40, "p45":45, "p50":50, "p55":55, "p60":60, "p65":65, "p70":70, "p75":75, "p80":80, "p85":85, "p90":90, "p95":95, "p100":100 }
    },
    "wireplumber#source": {
        "node-type": "Audio/Source",
        "format": "ÔÑ∞ {volume}%",
        "format-muted": "ÔÑ± ",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-click-middle": "pavucontrol -t 4",
        "on-click-right": "killall pavucontrol",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-",
        "scroll-step": 5
    },
    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        "on-click": "blueman-manager",
        "on-click-right": "killall blueman-manager",
        "format": "Ôäî {status}",
        // "format-disabled": "Ôäî disabled", // an empty format will hide the module
        // "format-off": "Ôäî off", // an empty format will hide the module
        // "format-on": "Ôäî on", // an empty format will hide the module
        "format-connected": "Ôäî {num_connections}",
        // "format-connected": "Ôäî {device_alias}",
        //"format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%", // Show device connected with battery info
        //"format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-disabled": "{controller_alias}\t{controller_address}\t{controller_address_type}\n\n disabled",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}\t{device_address_type}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_address_type}\t{device_battery_percentage}%"
    }
}
